
<% flash.each do |flash_type, message| %>
  <% 
  css_class = case flash_type.to_sym
      when :success then 'success'
      when :error   then 'pending'
      when :alert   then 'danger'
      when :notice  then 'success'
      else 'danger'
  end %>

  <div role="alert" class="alert relative border rounded-md px-5 py-4 border-<%= css_class %> text-<%= css_class %> dark:border-<%= css_class %> mb-2 flex items-center">
    <i data-tw-merge data-lucide="alert-octagon" class="stroke-1.5 w-5 h-5 mr-2 h-6 w-6 mr-2 h-6 w-6"></i>
    <span><%= message %></span>
    <button data-tw-merge data-tw-dismiss="alert" type="button" aria-label="Close" type="button" aria-label="Close" class="text-slate-800 py-2 px-3 absolute right-0 my-auto mr-2 btn-close"><i data-tw-merge data-lucide="x" class="stroke-1.5 w-5 h-5 h-4 w-4 h-4 w-4"></i></button>
  </div>
<% end %>
